{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["react-app", "prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "semi": true,
          "trailingComma": "none",
          "arrowParens": "avoid",
          "singleQuote": true,
          "printWidth": 100,
          "tabWidth": 2
        }
    ]
    }
}
